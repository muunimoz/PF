<div class="container-fluid">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">投稿編集</h3>
    </div>
  </div>
  <div class="row py-5 mx-auto mt-4 pr-4 shadow-lg w-50 d-flex align-items-center justify-content-center ">
    <div class="row d-flex align-items-center justify-content-center">
    <%= form_with model: @post do |f| %>
      <%= image_tag @post.get_image(200, 200) %>
    　<h4>説明</h4>
      <%= f.text_field :text %>
      <%= f.submit '更新', class: "btn btn-info" %>
      <%= link_to "削除", admin_post_path(@post.id), method: :delete, class: "btn btn-danger" %>
    <% end %>
    <div class="col-12 d-flex align-items-center justify-content-end">
      <%= link_to "BACK", admin_posts_path %>
    </div>
  </div>
</div>