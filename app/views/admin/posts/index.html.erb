<div class="container-fluid">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">投稿一覧</h3>
    </div>
  </div>
  <div class="row py-5 mx-auto mt-4 pr-4 shadow-lg w-50 d-flex align-items-center justify-content-center ">
    <div class="row d-flex align-items-center justify-content-center">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿id</th>
            <th>投稿画像</th>
            <th>ユーザーid</th>
            <th>投稿文</th>
            <th>最終更新日時</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.id, edit_admin_post_path(post.id) %></td>
              <td><%= image_tag post.get_image(100, 100) %></td>
              <td><%= post.user_id %></td>
              <td><%= post.text %></td>
              <td><%= post.updated_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-12 d-flex align-items-center justify-content-end">
        <%= link_to "BACK", admin_path %>
      </div>
    </div>
  </div>
</div>
  