<div class="container-fluid">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h3 class="mt-4">ユーザー編集</h3>
    </div>
  </div>
  <div class="row py-5 mx-auto mt-4 pr-4 shadow-lg w-50 d-flex align-items-center justify-content-center ">
    <div class="col-10">
      <div class="row d-flex align-items-center justify-content-center">
        <%= form_with model: @user do |f| %>
          <div class="col-md-12 mt-2">
            <h4 class="mt-3">ユーザーネーム</h4>
            <%= f.text_field :name %>
          </div>
          <div class="col-12 mt-4 d-flex align-items-center justify-content-start">
            <h4 class="mt-3">プロフィール画像</h4>
          </div>
          <div class="col-12 d-flex align-items-center justify-content-start">
            <%= image_tag @user.get_profile_image(100, 100) %>
          </div>
          <div class="col-12 d-flex align-items-center justify-content-start mt-3">
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="col-12 mt-4 d-flex align-items-center justify-content-start">
            <%= f.submit "更新", class: "btn btn-info justify-content-center" %>
          </div>
        <% end %>
      </div>
      <div class="col-12 d-flex align-items-center justify-content-end">
        <%= link_to "BACK", admin_users_path %>
      </div>
    </div>
  </div>
</div>