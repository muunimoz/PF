<div class="container-fluid">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h2>マイページ</h2>
        <div class="row py-5 mx-auto mt-4 shadow-lg w-50 d-flex align-items-center justify-content-center ">
          <div class="col-8">
            <%= image_tag @user.get_profile_image(200,200), class: "mt-3 rounded-circle"; %>
          </div>
          <div class="col-8">
            <p><%= @user.name %></p>
          </div>
            <% if @user.email == 'guest@example.com' %>
            <% else %>
              <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-primary" %>
            <% end %>
        
            <%= link_to "いいね",  favorites_user_path(@user) %>
        
            <% @posts.each do |post| %>
            <div>
              <%= link_to image_tag(post.get_image(200, 200)), post_path(post.id) %>
            </div>
            <% end %>
      </div>
    </div>
  </div>
</div>

  