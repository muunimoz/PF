<div class="container-fluid">
  <div class="row py-5 mx-auto mt-4 shadow-lg w-50 d-flex align-items-center justify-content-center">
    <div class="col-10">
      <% if @user == current_user %>
        <h2>マイページ</h2>
      <% else %>
        <h2>ユーザーページ</h2>
      <% end %>
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-2 d-flex justify-content-end px-0">
          <%= image_tag @user.get_profile_image(150,150), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-3 mt-4">
          <p>By <%= @user.name %></p>
        </div>
        <div class="col-3 mt-4">
          <% if @user == current_user %>
            <%= link_to "♡一覧",  favorites_user_path(@user) %>
          <% end %>
        </div>
        <% if @user.email == 'guest@example.com' %>
        <% else %>
        <div class="col-3 mt-4">
          <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
      <div class="row d-flex align-items-center justify-content-start ">
        <% @posts.each do |post| %>
          <div class="col-4 mt-2">
            <%= link_to image_tag(post.get_image(300,300)), post_path(post.id) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>